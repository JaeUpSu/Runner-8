<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/board_content2">

        <TextView
            android:id="@+id/tv_Markername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="장소명"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right">
    <ToggleButton
        android:id="@+id/btn_likeMarker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:textOn=""
        android:textOff=""/>
    <ToggleButton
        android:id="@+id/btn_homeMarker"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/home_selector"
        android:textOn=""
        android:textOff=""/>

</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">
    <TextView
        android:id="@+id/tv_Markeraddress"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소 : ㅇㅇ시 ㅇㅇ구 ㅇㅇ동 지번(or도로명)"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_Markersubway"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지하철 : ㅇㅇ역"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_Markerbus"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버스 : ㅇㅇ정류장"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_Markerinform1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance for each courses"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_Markerinform2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="place's breif imformation"
        android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>