    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:alpha="50"
        android:src="@drawable/run1"/>


</FrameLayout>