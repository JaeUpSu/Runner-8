<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        >
        <FrameLayout
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" 전 체 "
            android:textSize="20sp"/>

        <Switch
            android:id="@+id/sound_all"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:background="@drawable/switchselector"
            android:checked="true"
            android:textOff="OFF"
            android:textOn="ON"
            android:textSize="17sp" />
    </FrameLayout>

        <FrameLayout
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 시작 (카운트다운)"
            android:textSize="20sp"/>
        <Switch
            android:id="@+id/sound_start"
            android:layout_marginLeft="70dp"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/switchselector"
            android:layout_gravity="right"
            android:textOn="ON"
            android:textOff="OFF"
            android:checked="true"/>
    </FrameLayout>

        <FrameLayout
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" 도착 (예고)"
            android:textSize="20sp"/>

        <Switch
            android:id="@+id/sound_arrive"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:background="@drawable/switchselector"
            android:checked="true"
            android:textOff="OFF"
            android:textOn="ON" />
    </FrameLayout>

        <FrameLayout
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" 구간 (정보)"
            android:textSize="20sp"/>
        <Switch
            android:id="@+id/sound_quarter"
            android:layout_marginLeft="70dp"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/switchselector"
            android:layout_gravity="right"
            android:textOn="ON"
            android:textOff="OFF"
            android:checked="true"/>
    </FrameLayout>

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1km 기준 (정보)"
                android:textSize="20sp"/>
            <Switch
                android:id="@+id/sound_distance"
                android:layout_marginLeft="70dp"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/switchselector"
                android:layout_gravity="right"
                android:textOn="ON"
                android:textOff="OFF"
                android:checked="true"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/soundOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_gravity="right"
            android:text="적 용"
            android:textSize="17sp"
            android:textColor="#006E9F"/>
        <TextView
            android:id="@+id/soundCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="취 소"
            android:textSize="17sp"
            android:textColor="#006E9F"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>