<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MapActivity"
    android:gravity="bottom"
    app:umanoDragView="@id/dragView"
    app:umanoPanelHeight="17dp"
    app:umanoOverlay="false"
    app:umanoParallaxOffset="200dp"
    app:umanoShadowHeight="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/board_content2">
        <LinearLayout
            android:id="@+id/river_listLayouot"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_leftRiver"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/left"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/riverList_Course"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/btn_rightRiver"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/right"/>
        </LinearLayout>
        <TextView
            android:id="@+id/river_course"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="거리 : 2.2 km"/>
        <TextView
            android:id="@+id/river_walkTime"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="도보 예상 시간 : 1시간 10분"/>
        <TextView
            android:id="@+id/moun_cycleTime"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="자전거 예상 시간 : 32분"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/moun_coursePick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="선택완료"/>
            <TextView
                android:id="@+id/moun_courseCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="취  소"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp">

        <View
            android:id="@+id/view_river"
            android:layout_margin="10dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/board_content2">
        </View>
        <TextView
            android:id="@+id/river_lastTime"
            android:layout_margin="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은시간 : 1시간 20분"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/river_lastDist"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은거리 : 1.24 km"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/riverMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </FrameLayout>
</LinearLayout>

<LinearLayout
android:background="@drawable/customborder"
android:backgroundTint="#FFFDEF"
android:id="@+id/dragView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:clickable="true"
android:focusable="false"
android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/video2"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="test중..."
    android:textSize="20sp"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="아아아아~~~"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
</LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>